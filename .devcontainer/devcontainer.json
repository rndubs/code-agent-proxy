{
  "name": "LiteLLM Proxy Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "litellm",
  "workspaceFolder": "/workspace",

  // Configure VSCode settings
  "customizations": {
    "vscode": {
      "settings": {
        // OpenAI Codex / GitHub Copilot configuration
        // Point to local LiteLLM proxy
        "openai.api.endpoint": "http://localhost:4000",
        "openai.api.key": "${localEnv:LITELLM_MASTER_KEY}",

        // General editor settings
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      },

      "extensions": [
        // Python development
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Docker
        "ms-azuretools.vscode-docker",

        // YAML support
        "redhat.vscode-yaml",

        // Git
        "eamodio.gitlens",

        // Optional: GitHub Copilot (if using Codex through it)
        // "github.copilot",
        // "github.copilot-chat"
      ]
    }
  },

  // Environment variables for the devcontainer
  "remoteEnv": {
    "OPENAI_BASE_URL": "http://litellm:4000",
    "OPENAI_API_KEY": "${localEnv:LITELLM_MASTER_KEY}",
    "LITELLM_PROXY_URL": "http://litellm:4000"
  },

  // Forward ports to access services
  "forwardPorts": [4000, 5432, 6379],
  "portsAttributes": {
    "4000": {
      "label": "LiteLLM Proxy",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL"
    },
    "6379": {
      "label": "Redis"
    }
  },

  // Run commands after container creation
  "postCreateCommand": "echo 'LiteLLM Proxy is ready at http://localhost:4000'",

  // Keep container running
  "overrideCommand": true,

  // Use the non-root user 'vscode'
  "remoteUser": "root",

  // Mount the workspace
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  }
}
